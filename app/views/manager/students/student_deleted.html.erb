<h1>Student deleted</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Phone</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @student_deleteds.each_with_index do |student, index| %>
      <tr>
        <td scope="row"><%= index + 1 %></td>
        <td><%= link_to student.name, manager_student_path(student) %></td>
        <td><%= student.age %></td>
        <td><%= student.phone %></td>
        <td>
          <%= link_to "Restore", manager_student_restore_path(student.id), class: "btn btn-secondary" %>
          <%= link_to "Delete", manager_permanently_delete_path(student.id),data: {turbo_method: :delete, turbo_confirm: "Bạn chắc chắn muốn xoá?"}, class: "btn btn-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


