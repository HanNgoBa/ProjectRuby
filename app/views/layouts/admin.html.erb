<!DOCTYPE html>
<html>
  <head>
    <title>Bt119</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
     
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= link_to 'Home', admin_path, class: 'navbar-brand' %>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to 'Add', admin_path, class: 'nav-link active', 'aria-current': 'page' %>
            </li>
          </ul>

          
        </div> 
        
        <% if admin_signed_in? %>
          <p><%= current_admin.email %></p>
          <%= link_to 'Logout Admin', destroy_admin_session_path, method: :delete,data: { turbo_method: "delete" }, class: 'btn btn-outline-success' %>
          
        <% else %>
          <%= link_to 'Login', new_admin_session_path, class: 'btn btn-outline-success' %>
        <% end %>

      </div>
    </nav>
    <%= yield %>
  </body>
</html>
